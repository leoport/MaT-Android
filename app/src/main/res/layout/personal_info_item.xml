<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >
        <TextView android:id="@+id/info_item_title"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1" />
        <TextView android:id="@+id/info_item_value"
            android:textSize="18sp"
            android:textColor="#777777"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="1" />
    </LinearLayout>
    <Button
        android:id="@+id/info_item_help"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_help" />
    <Button
        android:id="@+id/info_item_edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_action_edit" />
</LinearLayout>
